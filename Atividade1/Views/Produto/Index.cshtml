@model IEnumerable<Atividade1.Models.Produto>;

<p>
    <a asp-controller="Produto" asp-action="CadastrarProd">Cadastra Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarProduto", new { id = item.IdProd }) |
                    @Html.ActionLink("Excluir", "ExcluirProduto", new { id = item.IdProd },
                    new { onclick = "return confirm('Deseja realmente Excluir este item?');" })
            </td>
        </tr>
                }
    </tbody>
</table>