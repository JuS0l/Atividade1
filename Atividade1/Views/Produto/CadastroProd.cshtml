@model Atividade1.Models.Produto;

<h2>Cadastro de Usuario</h2>

<form asp-action="Cadastro" method="post">
    <div>
        <label>Nome:</label>
        <input asp-for="Nome" required />
    </div>
    <div>
        <label>Preco:</label>
        <input asp-for="Preco" type="email" required />
    </div>
    <div>
        <label>Codigo:</label>
        <input asp-for="IdProd" type="password" required />
    </div>
    <button type="submit">Novo Cadastrado</button>
</form>